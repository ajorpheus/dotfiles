#macro index     .a      "l~A\n"
#macro index     .t      "l~d<1d\n"
#macro index     .y      "l~d<2d ~d>1d\n"

macro pager,editor,index <F8> :source\ /home/gregf/.muttrc<enter>

source ~/.mutt/sidebar.rc
